@using ProjektBibliotekaMVC.Utility;
@model ApplicationUserInputModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Usuwanie konta klienta</h1>

<h4>BookCopy</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdUser" />
            <h3>Email: @Model.Email</h3>
            <h5>Jest zatwierdzony: @Model.IsConfirmed</h5>
            <div class="form-group">
                <input type="submit" value="Cofnij" class="btn btn-primary" asp-action="CustomersIndex"/>
                <input type="submit" value="Usun" class="btn btn-primary" asp-action="DeleteCustomer" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
