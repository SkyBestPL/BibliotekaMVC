@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Home Page";
}
<form>
<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Role name</th>
            <th>Active account</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.UserRoles.FirstOrDefault()?.Role.Name</td>
                    <td>@user.EmailConfirmed</td>
                    <td>
                        <a asp-action="ConfirmCustomer" asp-route-id="@user.Id">Edit</a>
                        <a asp-action="DeleteCustomer" asp-route-id="@user.Id">Delete</a>
                    </td>  
                </tr>
        }
    </tbody>
</table>
</form>