@using ProjektBibliotekaMVC.Utility;
@model ProjektBibliotekaMVC.Utility.BookCopyInputModel

@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>

<h4>BookCopy</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <h3>Title: @ViewBag.BookTitle</h3>
            <input asp-for="IdBook" class="form-control" hidden />
            <input asp-for="Status" class="form-control" hidden/>
            <div class="form-group">
                <input asp-for="Amount" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
