@using ProjektBibliotekaMVC.Utility;
@model ProjektBibliotekaMVC.Utility.BookCopyInputModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BookCopy</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdBookCopy" />
            <input asp-for="IdBook" class="form-control" hidden/>
            <input asp-for="Status" class="form-control" hidden/>
            <div class="form-group">
                <label asp-for="NewStatus" class="control-label"></label>
                <select asp-for="NewStatus" class="form-control">
                    <option>@SD.BookInMagazine</option>
                    <option>@SD.BookIsWaiting</option>
                    <option>@SD.BookIsBorrowed</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
